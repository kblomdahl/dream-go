{
    "batch_size": 3072,
    "num_unrolls": 4,
    "data": [
        "data/foxwq_big.sgf"
    ],

    "model": {
        "stochastic": {
            "num_channels": 8
        },
        "representation": {
            "num_blocks": 6,
            "num_channels": 96
        },
        "dynamics": {
            "num_blocks": 6,
            "num_channels": 96
        },
        "predictor": {
            "layers": 2
        }
    },

    "loss": {
        "coefficients": {
            "policy": 1.0,
            "value": 1.0,
            "similarity": 0.1,
            "target": 0.1
        },

        "label_smoothing": 0.1,
        "discount_factor": 0.97
    },

    "optimizer": {
        "learning_rate": 3e-4,
        "decay_rate": 0.97,
        "weight_decay": 1e-5,
        "clipnorm": 5.0,
        "epochs": 50
    },

    "early_stopping": {
        "warmup_steps": 5000,
        "samples": 50,
        "max_slope": -1e-7
    }
}
